								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{customer_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"amount\": \"1000.50\",\n  \"currency\": \"USD\",\n  \"payeeAccount\": \"PAYEE123\",\n  \"swiftCode\": \"SBZAZAJJ\",\n  \"payeeName\": \"Jane Smith\"\n}"
